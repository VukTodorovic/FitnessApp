<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".BicepsActivity"
android:orientation="vertical">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/biceps1"
    android:textSize="30dp"
    android:textColor="@color/professional"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_margin="20dp"/>


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="https://www.youtube.com/watch?v=YFCOJ9xvFHM"
    android:textColor="@color/black"
    android:autoLink="web"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_marginBottom="20dp"/>

<ImageView
    android:layout_marginBottom="30dp"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:src="@drawable/biceps_1" />


<!-- Divider -->
<View
    android:id="@+id/my_divider"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#cccccc"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"/>


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/biceps2"
    android:textSize="30dp"
    android:textColor="@color/professional"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_margin="20dp"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="https://www.youtube.com/watch?v=kV8qh2BRbX4"
    android:textColor="@color/black"
    android:autoLink="web"
    android:textStyle="bold"
    android:textAlignment="center"/>

<ImageView
    android:layout_marginBottom="30dp"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:src="@drawable/biceps_2" />

</LinearLayout>
</ScrollView>